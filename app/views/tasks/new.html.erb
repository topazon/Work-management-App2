<% provide(:title, 'Create Task') %>
<h1>タスク新規作成</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag tasks_path do %>
      
      <p>名称</p>
      <input name="task_title">
      <p>詳細</p>
      <textarea name="details"></textarea>

      <%= link_to "新規登録", tasks_path,class:"btn btn-primary btn-block btn-create-task" %>
    <% end %>
  </div>
</div>