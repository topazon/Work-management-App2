<% provide(:title, 'task_edit') %>
<div class="main tasks-edit">
  <div class="container">
    <div class="tasks-edit-item">
      <h1>タスク編集</h1>
        <div class="task-edit-contents">
          <div class="row">
            <div class="col-md-6 col-md-offset-3">
              <%= form_with model: @task do |f| %>
                
                <%= f.label :task_title, "名称" %><br>
                <%= f.text_field :task_title%><br>
                
                <%= f.label :details, "詳細" %><br>
                <%= f.text_area :details %>
                
                <%= f.submit "更新",class:"btn btn-primary btn-block btn-create-task" %>
                <%= link_to "キャンセル", task_path ,class:"btn btn-white btn-block btn-edit-task" %>
              <% end %>
            </div>
          </div>
           
        </div>
    </div>
  </div>
</div>