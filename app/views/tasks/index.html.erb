<% provide(:title, 'tasks') %>
<h1>管理者のタスク一覧</h1>

<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <%= link_to "タスク新規作成", new_task_path, class: "btn btn-lg btn-primary pull-right" %>
     <table class="table table-hover" id="table-tasks">
       <thead>
         <tr>
           <th>名称</th>
           <th>作成日</th>
           <th></th>
         </tr>
       </thead>
       <tbody>
         <% @tasks.each do |task| %>
         <tr>
           <div class="tasks-index">
             <td><%= link_to task.task_title, task_path(task.id) %></td>
             <td><%= task.created_at %></td>
             <td>
               <%= link_to "編集", edit_task_path(task.id), class: "btn btn-sm btn-success"%>
               <%= link_to  "削除", task_path(task.id), method: :delete,
               data: { confirm: "削除してよろしいですか？"},
               class: "btn btn-sm btn-danger"%>
             </td>
           </div>
         </tr>
         <% end %>
       </tbody>
     </table>
    </div>
  </div>
</div>
