<% provide(:title, "Top") %>
<div class="container">
  <div class="row">
    
    <div class="col-md-7" id="top-left">
      <div class="center jumbotron" id="top-main">
        <h1 id="top-main-title">TaskApp</h1>
        <p>TaskAppは簡易ToDo管理ツールです。</p>
        <p>↓↓初めてのご利用↓↓</p>
          <div>
            <%= link_to "アカウント作成", signup_path, class: "btn btn-lg btn-primary" %>
          </div>
      </div>  
    </div>
    
    <div class="top-right">
      <h1>ログイン</h1>
      <p>メールアドレス</p>
      <input name="email">
      <p>パスワード</p>
      <input name="password">
      <input type="checkbox" name="keeper" value="ログイン情報を記憶する">
      <input type="submit" value="ログイン">
      <center>
        <%= link_to "ログイン", login_path, class: "btn btn-lg btn-primary" %>
      </center>
    </div>
  </div>
</div>
