<% provide(:title, "Top") %>
<div class="container">
  <div class="row">
    
    <div class="col-md-7" id="top-left">
      <div class="center jumbotron" id="top-main">
        <h1 id="top-main-title">TaskApp</h1>
        <p>TaskAppは簡易ToDo管理ツールです。</p>
        <p>↓↓初めてのご利用↓↓</p>
          <div>
            <%= link_to "アカウント作成", signup_path, class: "btn btn-lg btn-success" %>
          </div>
      </div>  
    </div>
    
    <div class="col-md-4">
      <h1>ログイン</h1>
        <%= form_tag login_path do %>
          <p>メールアドレス</p>
          <input name="email" class="col-md-12">
          <p>パスワード</p>
          <input name="password" type="password" class="col-md-12">
          <input type="checkbox" name="login_keeper">
          <p id="checkbox-mean">ログイン情報を記憶する</p>
          <center>
            <%= link_to "ログイン", login_path, class: "btn btn-lg btn-primary" %>
          </center>
        <% end %>
    </div>
  </div>
</div>
